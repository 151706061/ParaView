<ModuleInterfaces>
  <Manipulator name="FlyIn" types="3D" class="vtkPVJoystickFlyIn">
    <Scale variable="FlySpeed" resolution=".1" range="1 30" 
           trace_name="FlySpeed " trace_slider_movement="1"
           help="Set the speed of the camera in fly-in/out modes."/>
  </Manipulator>

  <Manipulator name="FlyOut" types="3D" class="vtkPVJoystickFlyOut">
    <Scale variable="FlySpeed" resolution=".1" range="1 30" 
           trace_name="FlySpeed" trace_slider_movement="1"
           help="Set the speed of fly-out camera manipulation."/>
  </Manipulator>

  <Manipulator name="Rotate" types="3D" class="vtkPVTrackballRotate">
  </Manipulator>

  <Manipulator name="Roll" types="2D 3D" class="vtkPVTrackballRoll">
  </Manipulator>

  <Manipulator name="Pan" types="2D 3D" class="vtkPVTrackballPan">
  </Manipulator>

  <Manipulator name="Move" types="2D 3D" class="vtkPVTrackballMoveActor">
  </Manipulator>

  <Manipulator name="Zoom" types="2D 3D" class="vtkPVTrackballZoom">
  </Manipulator>

</ModuleInterfaces>

