PLATFORM="x86-linux"
CC="/opt/i686-gcc-335/bin/gcc"
CXX="/opt/i686-gcc-335/bin/g++"
CFLAGS=""
CXXFLAGS="-Wno-deprecated"
CMAKE="/home/amy/cmake-2.4.6-Linux-i386/bin/cmake"
MAKE="make -j 2"
DISPLAY=:0.0

#-----------------------------------------------------------------------------
write_cache()
{
    write_standard_cache
    cat >> CMakeCache.txt <<EOF
PV_INSTALL_SYSTEM_RUNTIME_LIBS:STRING=/opt/i686-gcc-335/lib/libstdc++.so.5;/opt/i686-gcc-335/lib/libgcc_s.so.1
VTK_USE_INFOVIS:BOOL=OFF
EOF
}
