$kw(vtkTemp22) InvokeEvent "LeftButtonPressEvent"
$kw(vtkTemp22) SetEventInformationFlipY 405 102 0 0 0 0 0
$kw(vtkTemp22) InvokeEvent "MouseMoveEvent"
$kw(vtkTemp22) InvokeEvent "LeftButtonReleaseEvent"
