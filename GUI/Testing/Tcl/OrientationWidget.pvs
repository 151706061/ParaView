$Application ExitOnReturnOn

set kw(vtkTemp1) [$Application GetMainWindow]
set kw(vtkTemp21) [$kw(vtkTemp1) GetMainView]

$kw(vtkTemp21) SetOrientationAxesVisibility 1
$kw(vtkTemp21) SetOrientationAxesInteractivity 1
$kw(vtkTemp21) SetOrientationAxesOutlineColor 1 0 0

set kw(vtkTemp22) [$kw(vtkTemp1) GetInteractor]

#Reposition widget
$kw(vtkTemp22) SetEventInformationFlipY 2 503 0 0 0 0 0
$kw(vtkTemp22) InvokeEvent "MouseMoveEvent"
$kw(vtkTemp22) InvokeEvent "LeftButtonPressEvent"
$kw(vtkTemp22) SetEventInformationFlipY 300 250 0 0 0 0 0
$kw(vtkTemp22) InvokeEvent "MouseMoveEvent"
$kw(vtkTemp22) InvokeEvent "LeftButtonReleaseEvent"
update
[[$Application GetMainWindow] GetMainView] ForceRender

#Resize widget from lower left corner
$kw(vtkTemp22) SetEventInformationFlipY 298 352 0 0 0 0 0
