<?xml version="1.0" ?>
<pqevents>
  <!-- Load old statefile containing a 3D raw image represented with the DataExtent property -->
  <pqevent object="pqClientMainWindow/menubar" command="activate" arguments="menu_File" />
  <pqevent object="pqClientMainWindow/menubar/menu_File" command="activate" arguments="actionFileLoadServerState" />
  <pqevent object="pqClientMainWindow/FileLoadServerStateDialog" command="filesSelected" arguments="$PARAVIEW_DATA_ROOT/Testing/Data/raw3DImageBackwardCompat.pvsm" />
  <!-- Specify where paraview should search for the raw file references in the state file -->
  <pqevent object="LoadStateOptionsDialog/scrollArea/qt_scrollarea_viewport/Container/ProxyWidget/LoadStateDataFileOptions/ComboBox" command="activated" arguments="Search files under specified directory" />
  <pqevent object="LoadStateOptionsDialog/scrollArea/qt_scrollarea_viewport/Container/ProxyWidget/DataDirectory/FileChooser/FileLineEdit" command="set_string" arguments="$PARAVIEW_DATA_ROOT/Testing/Data" />
  <pqevent object="LoadStateOptionsDialog/widget/OKButton" command="activate" arguments="" />
  <!-- Select the source and check that it has the correct properties set -->
  <pqevent object="pqClientMainWindow/pipelineBrowserDock/pipelineBrowser" command="mousePress" arguments="1,0,0,10,2,/0:0/0:0" />
  <pqcheck object="pqClientMainWindow/propertiesDock/propertiesPanel/scrollArea/qt_scrollarea_viewport/scrollAreaWidgetContents/PropertiesFrame/ProxyPanel/FileDimensionality/ComboBox" property="currentText" arguments="3" />
  <pqcheck object="pqClientMainWindow/propertiesDock/propertiesPanel/scrollArea/qt_scrollarea_viewport/scrollAreaWidgetContents/PropertiesFrame/ProxyPanel/Dimensions/LineEdit0" property="text" arguments="4" />
  <pqcheck object="pqClientMainWindow/propertiesDock/propertiesPanel/scrollArea/qt_scrollarea_viewport/scrollAreaWidgetContents/PropertiesFrame/ProxyPanel/Dimensions/LineEdit1" property="text" arguments="3" />
  <pqcheck object="pqClientMainWindow/propertiesDock/propertiesPanel/scrollArea/qt_scrollarea_viewport/scrollAreaWidgetContents/PropertiesFrame/ProxyPanel/Dimensions/LineEdit2" property="text" arguments="5" />
  <pqcheck object="pqClientMainWindow/informationDock/informationWidgetFrame/informationScrollArea/qt_scrollarea_viewport/informationWidget/extents" property="text" arguments="0 to 3 (dimension: 4)&#xa;0 to 2 (dimension: 3)&#xa;0 to 4 (dimension: 5)" />

  <!-- Reset Session -->
  <pqevent object="pqClientMainWindow/menubar" command="activate" arguments="menu_Edit" />
  <pqevent object="pqClientMainWindow/menubar/menu_Edit" command="activate" arguments="actionDelete_All" />

  <!-- Repeat for legacy statefile containing a 2D raw image -->
  <pqevent object="pqClientMainWindow/menubar" command="activate" arguments="menu_File" />
  <pqevent object="pqClientMainWindow/menubar/menu_File" command="activate" arguments="actionFileLoadServerState" />
  <pqevent object="pqClientMainWindow/FileLoadServerStateDialog" command="filesSelected" arguments="$PARAVIEW_DATA_ROOT/Testing/Data/raw2DImageBackwardCompat.pvsm" />
  <pqevent object="LoadStateOptionsDialog/scrollArea/qt_scrollarea_viewport/Container/ProxyWidget/LoadStateDataFileOptions/ComboBox" command="activated" arguments="Search files under specified directory" />
  <pqevent object="LoadStateOptionsDialog/scrollArea/qt_scrollarea_viewport/Container/ProxyWidget/DataDirectory/FileChooser/FileLineEdit" command="set_string" arguments="$PARAVIEW_DATA_ROOT/Testing/Data" />
  <pqevent object="LoadStateOptionsDialog/widget/OKButton" command="activate" arguments="" />
  <!-- Select the source and check that it has the correct properties set -->
  <pqevent object="pqClientMainWindow/pipelineBrowserDock/pipelineBrowser" command="mousePress" arguments="1,0,0,10,2,/0:0/0:0" />
  <pqcheck object="pqClientMainWindow/propertiesDock/propertiesPanel/scrollArea/qt_scrollarea_viewport/scrollAreaWidgetContents/PropertiesFrame/ProxyPanel/FileDimensionality/ComboBox" property="currentText" arguments="2" />
  <pqcheck object="pqClientMainWindow/propertiesDock/propertiesPanel/scrollArea/qt_scrollarea_viewport/scrollAreaWidgetContents/PropertiesFrame/ProxyPanel/Dimensions/LineEdit0" property="text" arguments="5" />
  <pqcheck object="pqClientMainWindow/propertiesDock/propertiesPanel/scrollArea/qt_scrollarea_viewport/scrollAreaWidgetContents/PropertiesFrame/ProxyPanel/Dimensions/LineEdit1" property="text" arguments="3" />
  <pqcheck object="pqClientMainWindow/propertiesDock/propertiesPanel/scrollArea/qt_scrollarea_viewport/scrollAreaWidgetContents/PropertiesFrame/ProxyPanel/Dimensions/LineEdit2" property="text" arguments="0" />
  <pqcheck object="pqClientMainWindow/informationDock/informationWidgetFrame/informationScrollArea/qt_scrollarea_viewport/informationWidget/extents" property="text" arguments="0 to 4 (dimension: 5)&#xa;0 to 2 (dimension: 3)&#xa;0 to 0 (dimension: 1)" />
</pqevents>
