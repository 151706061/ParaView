<ServerManagerConfiguration>
  <!-- ==================================================================== -->
  <ProxyGroup name="views">
    <!--======================================================================-->
    <PrismViewProxy base_proxygroup="views"
                    base_proxyname="RenderView"
                    class="vtkPrismView"
                    name="PrismView"
                    label="Prism View"
                    processes="client|renderserver|dataserver">
      <Documentation>
        View proxy for 3D interactive Prism render view.
      </Documentation>
      <IntVectorProperty command="SetEnableThresholding"
                         default_values="0"
                         name="EnableThresholding"
                         label="Enable Thresholding"
                         number_of_elements="1">
        <BooleanDomain name="bool"/>
        <Documentation>
          When on, Thresholding is enabled.
        </Documentation>
      </IntVectorProperty>

      <DoubleVectorProperty name="PrismBounds"
                            command="GetPrismBounds"
                            information_only="1"
                            default_values="0.0 -1.0 0.0 -1.0 0.0 -1.0"
                            number_of_elements="6">
        <SimpleDoubleInformationHelper/>
        <Documentation>
          Get the prism bounds.
        </Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty command="SetLowerThresholdX"
                            default_values="0"
                            name="LowerThresholdX"
                            label="Lower Threshold"
                            number_of_elements="1">
        <PrismThresholdRangeDomain name="range" default_mode="min" axis_id="0">
          <RequiredProperties>
            <Property function="Bounds"
                      name="PrismBounds"/>
          </RequiredProperties>
        </PrismThresholdRangeDomain>
        <Documentation>
          The value of this property specifies the lower bound of the thresholding operation of X Axis.
        </Documentation>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator" mode="visibility" property="EnableThresholding" value="1"/>
        </Hints>
      </DoubleVectorProperty>
      <DoubleVectorProperty command="SetUpperThresholdX"
                            default_values="0"
                            name="UpperThresholdX"
                            label="Upper Threshold"
                            number_of_elements="1">
        <PrismThresholdRangeDomain name="range" default_mode="max" axis_id="0">
          <RequiredProperties>
            <Property function="Bounds"
                      name="PrismBounds"/>
          </RequiredProperties>
        </PrismThresholdRangeDomain>
        <Documentation>
          The value of this property specifies the upper bound of the thresholding operation of X Axis.
        </Documentation>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator" mode="visibility" property="EnableThresholding" value="1"/>
        </Hints>
      </DoubleVectorProperty>

      <DoubleVectorProperty command="SetLowerThresholdY"
                            default_values="0"
                            name="LowerThresholdY"
                            label="Lower Threshold"
                            number_of_elements="1">
        <PrismThresholdRangeDomain name="range" default_mode="min" axis_id="1">
          <RequiredProperties>
            <Property function="Bounds"
                      name="PrismBounds"/>
          </RequiredProperties>
        </PrismThresholdRangeDomain>
        <Documentation>
          The value of this property specifies the lower bound of the thresholding operation of Y Axis.
        </Documentation>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator" mode="visibility" property="EnableThresholding" value="1"/>
        </Hints>
      </DoubleVectorProperty>
      <DoubleVectorProperty command="SetUpperThresholdY"
                            default_values="0"
                            name="UpperThresholdY"
                            label="Upper Threshold"
                            number_of_elements="1">
        <PrismThresholdRangeDomain name="range" default_mode="max" axis_id="1">
          <RequiredProperties>
            <Property function="Bounds"
                      name="PrismBounds"/>
          </RequiredProperties>
        </PrismThresholdRangeDomain>
        <Documentation>
          The value of this property specifies the upper bound of the thresholding operation of Y Axis.
        </Documentation>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator" mode="visibility" property="EnableThresholding" value="1"/>
        </Hints>
      </DoubleVectorProperty>

      <DoubleVectorProperty command="SetLowerThresholdZ"
                            default_values="0"
                            name="LowerThresholdZ"
                            label="Lower Threshold"
                            number_of_elements="1">
        <PrismThresholdRangeDomain name="range" default_mode="min" axis_id="2">
          <RequiredProperties>
            <Property function="Bounds"
                      name="PrismBounds"/>
          </RequiredProperties>
        </PrismThresholdRangeDomain>
        <Documentation>
          The value of this property specifies the lower bound of the thresholding operation of Z Axis.
        </Documentation>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator" mode="visibility" property="EnableThresholding" value="1"/>
        </Hints>
      </DoubleVectorProperty>
      <DoubleVectorProperty command="SetUpperThresholdZ"
                            default_values="0"
                            name="UpperThresholdZ"
                            label="Upper Threshold"
                            number_of_elements="1">
        <PrismThresholdRangeDomain name="range" default_mode="max" axis_id="2">
          <RequiredProperties>
            <Property function="Bounds"
                      name="PrismBounds"/>
          </RequiredProperties>
        </PrismThresholdRangeDomain>
        <Documentation>
          The value of this property specifies the upper bound of the thresholding operation of Z Axis.
        </Documentation>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator" mode="visibility" property="EnableThresholding" value="1"/>
        </Hints>
      </DoubleVectorProperty>

      <IntVectorProperty command="SetLogScaleX"
                         default_values="0"
                         name="LogScaleX"
                         label="Use log scaling"
                         number_of_elements="1">
        <BooleanDomain name="bool"/>
        <Documentation>
          When on, X axis is log scaled.
        </Documentation>
      </IntVectorProperty>
      <IntVectorProperty command="SetLogScaleY"
                         default_values="0"
                         name="LogScaleY"
                         label="Use log scaling"
                         number_of_elements="1">
        <BooleanDomain name="bool"/>
        <Documentation>
          When on, Y axis is log scaled.
        </Documentation>
      </IntVectorProperty>
      <IntVectorProperty command="SetLogScaleZ"
                         default_values="0"
                         name="LogScaleZ"
                         label="Use log scaling"
                         number_of_elements="1">
        <BooleanDomain name="bool"/>
        <Documentation>
          When on, Z axis is log scaled.
        </Documentation>
      </IntVectorProperty>

      <StringVectorProperty name="XAxisName"
                            command="GetXAxisName"
                            information_only="1">
        <SimpleStringInformationHelper/>
      </StringVectorProperty>
      <StringVectorProperty name="YAxisName"
                            command="GetYAxisName"
                            information_only="1">
        <SimpleStringInformationHelper/>
      </StringVectorProperty>
      <StringVectorProperty name="ZAxisName"
                            command="GetZAxisName"
                            information_only="1">
        <SimpleStringInformationHelper/>
      </StringVectorProperty>

      <DoubleVectorProperty animateable="1"
                            command="SetAspectRatio"
                            default_values="1.0 1.0 1.0"
                            name="AspectRatio"
                            number_of_elements="3">
        <DoubleRangeDomain name="range"/>
        <Documentation>
          This property specifies the aspect ratio of the data.
        </Documentation>
      </DoubleVectorProperty>

      <PropertyGroup label="X Axis">
        <Property name="LowerThresholdX"/>
        <Property name="UpperThresholdX"/>
        <Property name="LogScaleX"/>
      </PropertyGroup>
      <PropertyGroup label="Y Axis">
        <Property name="LowerThresholdY"/>
        <Property name="UpperThresholdY"/>
        <Property name="LogScaleY"/>
      </PropertyGroup>
      <PropertyGroup label="Z Axis">
        <Property name="LowerThresholdZ"/>
        <Property name="UpperThresholdZ"/>
        <Property name="LogScaleZ"/>
      </PropertyGroup>
      <PropertyGroup label="Scaling">
        <Property name="AspectRatio"/>
      </PropertyGroup>
    </PrismViewProxy>
  </ProxyGroup>

  <!-- ==================================================================== -->
  <ProxyGroup name="representations">
    <!-- ==================================================================== -->
    <RepresentationProxy base_proxygroup="internal_representations"
                         base_proxyname="SurfaceRepresentationBase"
                         class="vtkPrismGeometryRepresentationWithFaces"
                         name="PrismSurfaceRepresentation"
                         processes="client|renderserver|dataserver">
      <Documentation>
        Prism representation to show any dataset in a 3D Prism view.
      </Documentation>
      <InputProperty command="SetInputConnection"
                     name="Input">
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <InputArrayDomain attribute_type="any"
                          name="input_array_any"/>
        <InputArrayDomain name="scalar_array"
                          number_of_components="1"
                          optional="1"/>
        <InputArrayDomain attribute_type="cell"
                          name="input_array_cell"
                          optional="1"/>
        <InputArrayDomain attribute_type="point"
                          name="input_array_point"
                          optional="1"/>
        <InputArrayDomain attribute_type="cell"
                          name="input_array_cell_1"
                          number_of_components="1"
                          optional="1"/>
        <InputArrayDomain attribute_type="point"
                          name="input_array_point_1"
                          number_of_components="1"
                          optional="1"/>
        <InputArrayDomain attribute_type="point"
                          name="input_array_point_2"
                          number_of_components="2"
                          optional="1"/>
        <InputArrayDomain attribute_type="cell"
                          name="input_array_cell_3"
                          number_of_components="3"
                          optional="1"/>
        <InputArrayDomain attribute_type="point"
                          name="input_array_point_3"
                          number_of_components="3"
                          optional="1"/>
        <Documentation>
          Set the input to the representation.
        </Documentation>
      </InputProperty>
      <IntVectorProperty command="SetBackfaceRepresentation"
                         default_values="400"
                         name="BackfaceRepresentation"
                         number_of_elements="1">
        <Documentation>
          Choose the representation type for the backface.
        </Documentation>
        <EnumerationDomain name="enum">
          <Entry text="Follow Frontface"
                 value="400"/>
          <Entry text="Cull Backface"
                 value="401"/>
          <Entry text="Cull Frontface"
                 value="402"/>
          <Entry text="Points"
                 value="0"/>
          <Entry text="Wireframe"
                 value="1"/>
          <Entry text="Surface"
                 value="2"/>
          <Entry text="Surface With Edges"
                 value="3"/>
        </EnumerationDomain>
      </IntVectorProperty>
      <DoubleVectorProperty command="SetBackfaceOpacity"
                            default_values="1.0"
                            name="BackfaceOpacity"
                            number_of_elements="1">
        <DoubleRangeDomain max="1"
                           min="0"
                           name="range"/>
      </DoubleVectorProperty>
      <DoubleVectorProperty command="SetBackfaceAmbientColor"
                            default_values="1.0 1.0 1.0"
                            name="BackfaceAmbientColor"
                            number_of_elements="3">
        <DoubleRangeDomain max="1 1 1"
                           min="0 0 0"
                           name="range"/>
      </DoubleVectorProperty>
      <DoubleVectorProperty command="SetBackfaceDiffuseColor"
                            default_values="1.0 1.0 1.0"
                            name="BackfaceDiffuseColor"
                            number_of_elements="3">
        <DoubleRangeDomain max="1 1 1"
                           min="0 0 0"
                           name="range"/>
        <Hints>
          <PropertyLink group="settings" proxy="ColorPalette" property="SurfaceColor" unlink_if_modified="1"/>
        </Hints>
      </DoubleVectorProperty>
      <!--  Prism related properties  -->
      <IntVectorProperty command="SetIsSimulationData"
                         default_values="0"
                         name="IsSimulationData"
                         number_of_elements="1">
        <PrismIsSimulationDataDomain name="bool">
          <RequiredProperties>
            <Property function="Input"
                      name="Input"/>
          </RequiredProperties>
        </PrismIsSimulationDataDomain>
      </IntVectorProperty>
      <IntVectorProperty command="SetAttributeType"
                         default_values="1"
                         name="AttributeType"
                         number_of_elements="1">
        <FieldDataDomain name="enum">
          <RequiredProperties>
            <Property function="Input"
                      name="Input"/>
          </RequiredProperties>
        </FieldDataDomain>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator" mode="visibility" property="IsSimulationData" value="1"/>
        </Hints>
        <Documentation>
          Control which AttributeType the filter operates on.
        </Documentation>
      </IntVectorProperty>
      <StringVectorProperty command="SetXArrayName"
                            name="XArrayName"
                            label="X Array"
                            number_of_elements="1">
        <ArrayListDomain name="array_list"
                         input_domain_name="scalar_array">
          <RequiredProperties>
            <Property function="Input"
                      name="Input"/>
            <Property function="FieldDataSelection"
                      name="AttributeType"/>
          </RequiredProperties>
        </ArrayListDomain>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator" mode="visibility" property="IsSimulationData" value="1"/>
        </Hints>
        <Documentation>
          The name of the array to use as the X coordinate.
        </Documentation>
      </StringVectorProperty>
      <StringVectorProperty command="SetYArrayName"
                            name="YArrayName"
                            label="Y Array"
                            number_of_elements="1">
        <ArrayListDomain name="array_list"
                         input_domain_name="scalar_array">
          <RequiredProperties>
            <Property function="Input"
                      name="Input"/>
            <Property function="FieldDataSelection"
                      name="AttributeType"/>
          </RequiredProperties>
        </ArrayListDomain>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator" mode="visibility" property="IsSimulationData" value="1"/>
        </Hints>
        <Documentation>
          The name of the array to use as the Y coordinate.
        </Documentation>
      </StringVectorProperty>
      <StringVectorProperty command="SetZArrayName"
                            name="ZArrayName"
                            label="Z Array"
                            number_of_elements="1">
        <ArrayListDomain name="array_list"
                         input_domain_name="scalar_array">
          <RequiredProperties>
            <Property function="Input"
                      name="Input"/>
            <Property function="FieldDataSelection"
                      name="AttributeType"/>
          </RequiredProperties>
        </ArrayListDomain>
        <Hints>
          <PropertyWidgetDecorator type="GenericDecorator" mode="visibility" property="IsSimulationData" value="1"/>
        </Hints>
        <Documentation>
          The name of the array to use as the Z coordinate.
        </Documentation>
      </StringVectorProperty>
    </RepresentationProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
