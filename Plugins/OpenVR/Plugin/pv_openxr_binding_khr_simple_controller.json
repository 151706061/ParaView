{
  "interaction_profile": "/interaction_profiles/valve/index_controller",

  "bindings": {
    "vtk-actions": {
      "sources": [
        {
          "inputs": {
            "click": {
              "output": "startmovement"
            },
            "position": {
              "output": "movement"
            }
          },
          "mode": "trackpad",
          "path": "/user/hand/right/input/trackpad"
        },
        {
          "inputs": {},
          "mode": "button",
          "path": "/user/hand/left/input/menu"
        },
        {
          "inputs": {
            "click": {
              "output": "showmenu"
            }
          },
          "mode": "button",
          "path": "/user/hand/right/input/menu"
        },
        {
          "inputs": {
            "click": {
              "output": "nextcamerapose"
            }
          },
          "mode": "button",
          "path": "/user/hand/left/input/trigger"
        },
        {
          "inputs": {
            "click": {
              "output": "triggeraction"
            }
          },
          "mode": "button",
          "path": "/user/hand/right/input/trigger"
        },
        {
          "inputs": {
            "click": {
              "output": "leftgripaction"
            },
            "pose": {
              "output": "handposehandgrip"
            }
          },
          "path": "/user/hand/left/input/squeeze"
        },
        {
          "inputs": {
            "click": {
              "output": "rightgripaction"
            },
            "pose": {
              "output": "handposehandgrip"
            }
          },
          "path": "/user/hand/right/input/squeeze"
        }
      ]
    }
  }
}
